{
  "name": "audio-device",
  "title": "Audio Device",
  "description": "Switch the active audio device of your mac.",
  "icon": "command-icon.png",
  "author": "benvp",
  "license": "MIT",
  "commands": [
    {
      "name": "set-output-device",
      "title": "Set output device",
      "subtitle": "Audio Device",
      "description": "Sets the active audio output device.",
      "keywords": [
        "audio",
        "device",
        "output"
      ],
      "mode": "view"
    },
    {
      "name": "set-input-device",
      "title": "Set input device",
      "subtitle": "Audio Device",
      "description": "Sets the active audio input device.",
      "keywords": [
        "audio",
        "device",
        "input"
      ],
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "switchAudioSourcePath",
      "title": "SwitchAudioSource (switchaudio-osx) path",
      "description": "Your local path to SwitchAudioSource.",
      "link": "https://github.com/deweller/switchaudio-osx",
      "type": "textfield",
      "default": "/opt/homebrew/bin/SwitchAudioSource",
      "value": "/opt/homebrew/bin/SwitchAudioSource",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
